@model IEnumerable<Gighub.Models.Gig>
@{
    ViewBag.Title = "Mine";
}

<h2>My Upcomming Gigs</h2>

<ul class="gigs voffset4">
    @foreach (var item in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @item.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @item.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @item.Venue
                </span>
                <span class="genre">
                    @item.Genre.Name
                </span>

                
            </div>
        </li>
    }
</ul>