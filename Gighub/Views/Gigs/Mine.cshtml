@model IEnumerable<Gighub.Models.Gig>
@{
    ViewBag.Title = "Mine";
}

<h2>My Upcomming Gigs</h2>

<ul class="gigs voffset4">
    @foreach (var item in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @item.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @item.DateTime.ToString("d ")
                </div>
            </div>

            <div class="details">
                <span class="artist">
                    @item.Venue
                </span>
                <span class="genre">
                    @item.Genre.Name
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit","Gigs",new { id = item.Id})">
                    Edit</a> | <a href="#" class="js-cancel-gig" data-gig-id="@item.Id">
                    Cancel</a>
                </div>
                
            </div>
        </li>
    }
</ul>

@section scripts
{
 <script>

     $(document).ready(function () {
         $(".js-cancel-gig").click(function (e) {
             var link = $(e.target);

             bootbox.confirm({
                 message: "Are you sure you want to delete this gig ?",
                 buttons: {
                     confirm: {
                         label: 'Yes',
                         className: 'btn-danger'
                     },
                     cancel: {
                         label: 'No',
                         className: 'btn-default'
                     }
                 },
                 callback: function (result) {
                     if (result) {
                         $.ajax({
                             url: "/api/gigs/" + link.attr("data-gig-id"),
                             method: "DELETE"
                         })
                             .done(function () {
                                 link.parents("li").fadeOut(function () {
                                     $(this).remove();
                                 });

                             })
                             .fail(function () {
                                 alert("Something Failed");
                             })
                     }
                 }
             });


             
         });
     });
    </script>
    
}
